<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test Project Nodejs</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">Inventry</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/">Add Items</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/show">Show Inventry</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <h2 style="text-align: center" class="mt-3">All items Detail</h2>
      <br />
      <table class="table table-border table-bordered text-center shadow">
        <tr>
          <th>Item</th>
          <th>Description</th>
          <th>Price</th>
          <th>Quantity</th>
        </tr>
        <% items.forEach((item)=>{ %>
        <tr>
          <td><%= item.itemName%></td>
          <td><%= item.description%></td>
          <td><%= item.price%></td>
          <td><%= item.quantity%></td>

          <td>
            <a href="/update1/<%= item.id %>" class="btn btn-warning btn-sm"
              >Buy 1</a
            >
          </td>
          <td>
            <a href="/update2/<%= item.id %>" class="btn btn-warning btn-sm"
              >Buy 2</a
            >
          </td>
          <td>
            <a href="/update3/<%= item.id %>" class="btn btn-warning btn-sm"
              >Buy 3</a
            >
          </td>
          <td>
            <a href="/edit/<%= item.id %>" class="btn btn-success btn-sm"
              >Edit Item</a
            >
          </td>
        </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
